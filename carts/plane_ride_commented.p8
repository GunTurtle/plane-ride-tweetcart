pico-8 cartridge // http://www.pico-8.com
version 42
__lua__
t=0 -- time variable
q=2
::_:: -- start of draw loop
	t+=1
	flip() -- display changes to screen
	-- draw a column
	for y=0,127 do
		d=128 -- minimum distance
		c=0 -- color
		-- loop through seeds:
		for i=t\q,t\q+15 do
			srand(i)
			-- get chebyshev distance:
			-- seed x is 'i*q'
			-- seed y is rnd(172)-32
			e=max(abs(t-i*q),abs(y-rnd(172)+32)*2)
			if(e<d)d,c=e,rnd(5)
		end
		pset(127,y,c)
	end
	poke(0x5f54,0x60) -- use the screen as spritesheet
	spr(0,-1,0,16,16) -- draw the screen one pixel left (as sprite)

	-- set palette to only blue pixels, make blue white:
	palt(0b1011111111111111)
	pal(1,7)
	spr(0,-2,-12,16,16) -- draw clouds
	pal()
goto _ -- end of draw loop
